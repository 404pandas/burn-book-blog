      <div id="social-icons">
        {{! linkedin icon }}
        <img
          href="https://linkedin.com/in/404pandas"
          height="24"
          width="24"
          src="https://cdn.simpleicons.org/linkedin/80ca09"
        />
        {{! share icon }}
        <i class="material-icons">share</i>
        {{! github icon }}
        <img
          href="https://github.com/404pandas"
          height="24"
          width="24"
          src="https://cdn.simpleicons.org/github/80ca09"
        />
      </div>
    </div>
  </footer>
