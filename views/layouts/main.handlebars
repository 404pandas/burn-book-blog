  <body id="background-back-layer">
    {{! header }}
    <nav id="nav">
      <div class="nav-wrapper" id="header-wrapper">
        {{! City }}
        <img id="city-header" src="/images/header-city.png" />
        {{! Sign }}
        <a href="#" id="city-sign">
          Tech Blog
        </a>
        {{! Nav }}
        <div id="full-nav">
          <ul class="right hide-on-sm-and-down" id="nav-mobile">
            <li><a href="/">Home</a></li>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/login">Login</a></li>
            <li><a href="#" id="logout-link">Logout</a></li>
          </ul>
        </div>
      </div>
    </nav>
    {{! foreground }}
    <div id="background-front-layer">
      <div id="background-city"></div>
    </div>

    {{! TODO- insert aliens after MVP }}

    {{{body}}}

    {{! footer }}

    {{! javascript imports }}

  </body>
  <footer id="footerContainer">
    <div id="leftFooter">
      {{! icon }}
      <div class="valign-text" id="location">
        <i class="material-icons">location_on</i>
        United States
      </div>
      {{! icon }}
      <div class="valign-text" id="phone">

        <i class="material-icons">phone</i>
        1 (772) 834 2342</div>
      {{! icon }}
      <div class="valign-text" id="email">

        <i class="material-icons">email</i>

        mary.panda.jackson@gmail.com</div>
